<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".fragment.TaiKhoanFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/main.appbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/main.collapsing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/main.appbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/btnDonHang"
                android:background="@drawable/bg_button"
                android:drawableLeft="@drawable/donmua_48px"
                android:drawableRight="@drawable/chevron_right_40px"
                android:text="Đơn mua"
                android:textSize="15dp"></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:state_pressed="true"
                android:state_enabled="true"
                android:background="@drawable/bg_btn"
                android:drawableLeft="@drawable/telephone_48px"
                android:drawableRight="@drawable/chevron_right_40px"
                android:text="Đơn nạp thẻ và dịch vụ"
                android:textSize="15dp"></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/bg_button"
                android:drawableLeft="@drawable/heart_with_pulse_48px"
                android:drawableRight="@drawable/chevron_right_40px"
                android:text="Đã thích"
                android:textSize="15dp"></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/bg_btn"
                android:drawableLeft="@drawable/clock_50px"
                android:drawableRight="@drawable/chevron_right_40px"
                android:text="Mới xem"
                android:textSize="15dp"></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/bg_button"
                android:drawableLeft="@drawable/bag_50px"
                android:drawableRight="@drawable/chevron_right_40px"
                android:text="Ví Shop Online"
                android:textSize="15dp"></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/bg_btn"
                android:drawableLeft="@drawable/money_bag_50px"
                android:drawableRight="@drawable/chevron_right_40px"
                android:text="Shop Online Xu"
                android:textSize="15dp"></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/bg_button"
                android:drawableLeft="@drawable/star_50px"
                android:drawableRight="@drawable/chevron_right_40px"
                android:text="Đánh giá của tôi"
                android:textSize="15dp"></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/bg_btn"
                android:drawableLeft="@drawable/new_ticket_48px"
                android:drawableRight="@drawable/chevron_right_40px"
                android:text="Ví Voucher"
                android:textSize="15dp"></Button>

            <Button
                android:id="@+id/btnThietLapTaiKhoan"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/bg_button"
                android:drawableLeft="@drawable/taikhoan"
                android:drawableRight="@drawable/chevron_right_40px"
                android:text="Thiết lập tài khoản"
                android:textSize="15dp"></Button>
            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/bg_btn"
                android:drawableLeft="@drawable/help_48px"
                android:drawableRight="@drawable/chevron_right_40px"
                android:text="Trung tâm trợ giúp"
                android:textSize="15dp"></Button>
            <Button
                android:id="@+id/btnDangXuat"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/bg_button"
                android:drawableLeft="@drawable/taikhoan"
                android:drawableRight="@drawable/chevron_right_40px"
                android:text="Đăng xuất"
                android:textSize="15dp"></Button>

            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/bg_btn"
                android:textSize="15dp"></Button>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
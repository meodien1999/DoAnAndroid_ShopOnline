
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 style="text-align: center">ĐĂNG NHẬP</h2>
    <div style="color: red;">@ViewBag.error</div>
    <form action="@Url.Action("XLDangNhap")" method="post">
        <div class="row form-group">
            <label class="col-sm-3"><h4>Username:</h4></label>
            <div class="col-sm-9">
                <input class="form-control" type="text" name="Username" required />
            </div>
        </div>
        <div class="row form-group">
            <label class="col-sm-3"><h4>Mật khẩu:</h4></label>
            <div class="col-sm-9">
                <input class="form-control" type="password" name="matkhau" required />
            </div>
        </div>
        <div class="row form-group">
            <div class="offset-sm-5"><button type="submit" class="btn btn-dark">Đăng nhập <i class="fas fa-sign-in-alt"></i></button></div>
        </div>
        <div style="text-align:right">
            <p style="color:brown;">Chưa có tài khoản:</p>
            <a href="@Url.Action("DangKy","DangNhap")" class="btn btn-dark ml-5"><i class="fas fa-user-plus"></i> Đăng ký</a>
        </div>
    </form>
</div>
@using WebAppDongHo.Models;
@model SanPham
@{
    ViewBag.Title = "ChiTietSP";
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-5">
            <img src="~/Content/SanPham/@Model.HinhAnh" width="100%;" />
        </div>
        <div class="col-md-5">
            <p>@ViewBag.TenLoai - @Model.Size MM</p>
            <b>@Model.TenSP</b>
            <p><i class="fas fa-star" style="color:#edc419;"></i><i class="fas fa-star" style="color:#edc419;"></i><i class="fas fa-star" style="color:#edc419;"></i><i class="fas fa-star" style="color:#edc419;"></i><i class="fas fa-star" style="color:#edc419;"></i><a style="color:#bfbfbf;"> 14 reviews</a></p>
            <p><b>@string.Format("{0:0,0}", Model.GiaBan) đ</b></p>
            <a href="@Url.Action("Themgiohang","GioHang", new { msp = Model.MaSP})" class="btn btn-dark mr-3"><i class="fas fa-cart-plus"></i> Thêm vào giỏ hàng</a>
            <a href="@Url.Action("ThongTinDatHang","GioHang")" class="btn btn-dark"><i class="far fa-credit-card"></i> Thanh toán ngay</a>
            <p class="mt-3">TÍNH NĂNG</p> <hr />
            <p>@Model.MoTa</p>
        </div>
    </div>
</div>


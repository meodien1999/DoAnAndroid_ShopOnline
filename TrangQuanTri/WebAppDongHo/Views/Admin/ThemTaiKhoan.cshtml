
@{
    ViewBag.Title = "ThemTaiKhoan";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}
<link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/bootstrap/js/bootstrap.min.js"></script>


<div class="container mt-5">
    <h2 style="text-align: center">THÊM TÀI KHOẢN</h2>
    <div style="color: red;">@ViewBag.error</div>
    <form action="@Url.Action("XLThemTaiKhoan")" method="post">
        <div class="row form-group">
            <label class="col-sm-3"><h4>Username:</h4></label>
            <div class="col-sm-9">
                <input class="form-control" type="text" name="Username" required />
            </div>
        </div>
        <div class="row form-group">
            <label class="col-sm-3"><h4>Mật khẩu:</h4></label>
            <div class="col-sm-9">
                <input class="form-control" type="password" name="matkhau" required />
            </div>
        </div>
        <div class="row form-group">
            <label class="col-sm-3"><h4>Họ Tên:</h4></label>
            <div class="col-sm-9">
                <input class="form-control" type="text" name="hoten" required />
            </div>
        </div>
        <div class="row form-group">
            <label class="col-sm-3"><h4>Địa chỉ:</h4></label>
            <div class="col-sm-9">
                <input class="form-control" type="text" name="diachi" required />
            </div>
        </div>
        <div class="row form-group">
            <label class="col-sm-3"><h4>Số điện thoại:</h4></label>
            <div class="col-sm-9">
                <input class="form-control" type="text" name="sodt" required />
            </div>
        </div>
        <div class="row form-group">
            <div class="offset-sm-5"><button type="submit" class="btn btn-dark"><i class="fas fa-user-plus"></i> Lưu</button></div>
        </div>
    </form>
</div>


@model WebAppDongHo.Models.TaiKhoan

@{
    ViewBag.Title = "SuaTaiKhoan";
    Layout = "~/Views/Admin/_LayoutAdmin.cshtml";
}
<link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
<div class="container mt-5">
    <h2 style="text-align: center">Cập nhật tài khoản</h2>
    <form action="@Url.Action("XLSuaTaiKhoan")" method="post">
        <div class="row form-group">
            <label class="col-sm-3"><h4>Username:</h4></label>
            <div class="col-sm-9">
                <input class="form-control" type="text" name="Username" value="@Model.UserName" readonly />
            </div>
        </div>
        <div class="row form-group">
            <label class="col-sm-3"><h4>Họ Tên:</h4></label>
            <div class="col-sm-9">
                <input class="form-control" type="text" name="hoten" value="@Model.HoTen" />
            </div>
        </div>
        <div class="row form-group">
            <label class="col-sm-3"><h4>Địa chỉ:</h4></label>
            <div class="col-sm-9">
                <input class="form-control" type="text" name="diachi" value="@Model.DiaChi" />
            </div>
        </div>
        <div class="row form-group">
            <label class="col-sm-3"><h4>Số điện thoại:</h4></label>
            <div class="col-sm-9">
                <input class="form-control" type="text" name="sodienthoai" value="@Model.SoDienThoai" />
            </div>
        </div>
        <div class="row form-group">
            <label class="col-sm-3"><h4>Phân quyền:</h4></label>
            <div class="col-sm-9">
                <select name="phanquyen">
                    @if (Model.PhanQuyen == 1)
                    {
                        <option value="0">Khách hàng</option>
                        <option value="1" selected>Admin</option>
                    }
                    else
                    {
                        <option value="0" selected>Khách hàng</option>
                        <option value="1">Admin</option>
                    }
                </select>
            </div>
        </div>
        <div class="row form-group">
            <div class="offset-sm-5"><button type="submit" class="btn btn-dark"><i class="fas fa-user-plus"></i> Lưu</button></div>
        </div>
    </form>
</div>

